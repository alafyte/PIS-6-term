<div>
    <h1 class="text-center">Войти</h1>
    <form method="post" action="/Admin/SignIn" class="w-25 mx-auto">
        <div class="form-group">
            <label>Логин:</label>
            <input class="form-control" name="username" value="@ViewBag.Username" />
        </div>
        <div class="form-group mt-1">
            <label>Пароль:</label>
            <input class="form-control" name="password" type="password" value="@ViewBag.Password" />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Войти</button>

        @await Html.PartialAsync("ErrorsBlock")
    </form>
</div>