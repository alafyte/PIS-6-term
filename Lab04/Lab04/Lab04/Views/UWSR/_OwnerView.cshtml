@using (Html.BeginForm("AddLink", "UWSR", FormMethod.Post))
{
    <label for="url">URL:</label>
    <input type="text" id="url" name="Url" required />
    <label for="description">Описание:</label>
    <input type="text" id="description" name="Description" required />
    <button type="submit">Add Link</button>
}

@using (Html.BeginForm("UpdateLink", "UWSR", FormMethod.Post))
{
    <label for="updateUrl">URL для обновления:</label>
    <input type="text" id="updateUrl" name="Url" required />
    <label for="updateDescription">New Description:</label>
    <input type="text" id="updateDescription" name="Description" required />
    <button type="submit">Update Link</button>
}

@using (Html.BeginForm("AddComment", "UWSR", FormMethod.Post))
{
    <label for="commentText">Комментарий:</label>
    <input type="text" id="commentText" name="ComText" required />
    <button type="submit">Добавить</button>
}

